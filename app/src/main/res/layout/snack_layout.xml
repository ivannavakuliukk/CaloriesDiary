<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/snack"
    android:background="@drawable/border_style">
    <LinearLayout
        android:id="@+id/snack_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:src="@drawable/moon"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="4"
            android:layout_marginStart="10dp"
            android:textSize="18dp"
            android:fontFamily="@font/lorabold"
            android:layout_marginTop="20dp"
            android:text="Перекус/Інше"
            />
        <ImageButton
            android:id="@+id/add_product_snack"
            android:onClick="startSearchProductActivity"
            android:layout_width="0dp"
            android:layout_marginTop="25dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:layout_marginEnd="20dp"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:src="@drawable/plus" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/snack_name"
        android:id="@+id/total_snack"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:id="@+id/total_fat_snack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="0"
            android:fontFamily="@font/loraregular"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/total_protein_snack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="0"
            android:fontFamily="@font/loraregular"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/total_carbs_snack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="0"
            android:fontFamily="@font/loraregular"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/total_dn_snack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="0%"
            android:fontFamily="@font/loraregular"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/total_calories_snack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:text="0"
            android:fontFamily="@font/lorabold"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_list_snack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_snack"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>


</RelativeLayout>