<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:ignore="MissingClass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/pink"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:text="Вітаємо в додатку"
            android:fontFamily="@font/lorabold"
            android:layout_centerHorizontal="true"
            android:textSize="23dp"
            android:layout_marginTop="23dp"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_below="@id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="CaloriesDiary!"
            android:fontFamily="@font/kaushanscript"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_below="@id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:text="Відслідковуйте своє "
            android:fontFamily="@font/loraregular"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/text4"
            android:layout_below="@id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:text="харчування."
            android:fontFamily="@font/loraregular"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/text5"
            android:layout_below="@id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:text="Ставте ціль та "
            android:fontFamily="@font/loraregular"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/text6"
            android:layout_below="@id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:text="досягайте її."
            android:fontFamily="@font/loraregular"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/sign_in_button"
            android:onClick="startSignInActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_bg"
            android:text="Вхід"
            android:textSize="23dp"
            android:fontFamily="@font/loraregular"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />
        <Button
            android:onClick="startRegisterActivity"
            android:id="@+id/register_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_bg"
            android:text="Реєстрація"
            android:textSize="23dp"
            android:fontFamily="@font/loraregular"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>

</RelativeLayout>
