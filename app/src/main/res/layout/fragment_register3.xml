<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Register3Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- block1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/block1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/crimson"
                android:text="3 з 3"
                android:textSize="20dp"
                android:fontFamily="@font/loraregular"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <!--block2-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_below="@+id/block1"
            android:id="@+id/block2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lifestyle_text"
                android:textColor="@color/pink"
                android:text="Вкажіть свій спосіб життя"
                android:textSize="23dp"
                android:fontFamily="@font/loraregular"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                />
            <!-- Radio Buttons підключаються з іншого шаблону custom_radio_button.xml-->
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_below="@id/lifestyle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">
                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Малорухливий"
                    android:textSize="23dp"
                    android:textColor="@color/crimson"
                    android:fontFamily="@font/loraregular"/>

                <TextView
                    android:id="@+id/descriptionTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(мало фізичних вправ, сидяча робота)"
                    android:textSize="18dp"
                    android:textColor="@color/pink"
                    android:paddingStart="30dp"
                    android:layout_marginEnd="20dp"/>
                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Трішки активний"
                    android:textSize="23dp"
                    android:textColor="@color/crimson"
                    android:fontFamily="@font/loraregular"/>
                <TextView
                    android:id="@+id/descriptionTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(легкі вправи 1-3 дні/тиждень)"
                    android:textSize="18dp"
                    android:textColor="@color/pink"
                    android:paddingStart="30dp"
                    android:layout_marginEnd="20dp"/>
                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Помірно активний"
                    android:textSize="23dp"
                    android:textColor="@color/crimson"
                    android:fontFamily="@font/loraregular"/>
                <TextView
                    android:id="@+id/descriptionTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(помірні вправи 3-5 днів/тиждень)"
                    android:textSize="18dp"
                    android:textColor="@color/pink"
                    android:paddingStart="30dp"
                    android:layout_marginEnd="20dp"/>
                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дуже активний"
                    android:textSize="23dp"
                    android:textColor="@color/crimson"
                    android:fontFamily="@font/loraregular"/>
                <TextView
                    android:id="@+id/descriptionTextView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(інтенсивні фізичні навантаження/спорт 6-7 днів/тиждень)"
                    android:textSize="18dp"
                    android:textColor="@color/pink"
                    android:paddingStart="30dp"
                    android:layout_marginEnd="20dp"/>
            </RadioGroup>

        </RelativeLayout>
        <!--block3-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block2"
            android:id="@+id/block3"
            >
            <Button android:id="@+id/button_forward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="94dp"
                android:layout_marginEnd="94dp"
                android:text="Далі"
                android:fontFamily="@font/loraregular"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button_bg"/>

            <Button android:id="@+id/button_back"
                android:layout_below="@id/button_forward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="94dp"
                android:layout_marginEnd="94dp"
                android:layout_marginBottom="30dp"
                android:text="Назад"
                android:fontFamily="@font/loraregular"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_button_bg"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>