<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserPageActivity">
<!--header-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentStart="true"
        android:id="@+id/header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:text="Сторінка користувача"
            android:fontFamily="@font/loraregular"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--block info 1-->
            <RelativeLayout
                android:id="@+id/info_block1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                >
        <!--name-->
                <LinearLayout
                    android:id="@+id/name_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Пошта"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
        <!--dn-->
                <LinearLayout
                    android:id="@+id/dn_line"
                    android:layout_below="@id/name_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ДН       (денна норма калорій)"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/dn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
                <Button
                    android:id="@+id/change_dn"
                    android:onClick="startEdit1Activity"
                    android:layout_below="@id/dn_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Редагувати дн"
                    android:fontFamily="@font/loraregular"
                    android:textSize="20dp"/>
            </RelativeLayout>
        <!--block info2-->
            <RelativeLayout
                android:id="@+id/info_block2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_block1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Якщо ви зміните ці дані, ДН автоматично зміниться"
                    android:textSize="18dp"
                    android:fontFamily="@font/loraregular"
                    android:textColor="@color/crimson"
                    android:layout_marginBottom="10dp"
                    />
        <!--weight-->
                <LinearLayout
                    android:id="@+id/weight_line"
                    android:layout_below="@id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Вага (кг)"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
        <!--height-->
                <LinearLayout
                    android:id="@+id/height_line"
                    android:layout_below="@id/weight_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ріст (см)"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/height"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
        <!--goal-->
                <LinearLayout
                    android:id="@+id/goal_line"
                    android:layout_below="@id/height_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Мета"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/goal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
        <!--lifestyle-->
                <LinearLayout
                    android:id="@+id/lifestyle_line"
                    android:layout_below="@id/goal_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Спосіб життя"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/lifestyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
                <!--gender-->
                <LinearLayout
                    android:id="@+id/gender_line"
                    android:layout_below="@id/lifestyle_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Стать"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/age_line"
                    android:layout_below="@id/gender_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Вік"
                        android:textSize="18sp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="18dp"
                        android:fontFamily="@font/loraregular"
                        android:textColor="@color/crimson"/>
                </LinearLayout>
                <Button
                    android:id="@+id/change_data"
                    android:onClick="startEdit2Activity"
                    android:layout_below="@id/age_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="Редагувати дані"
                    android:fontFamily="@font/loraregular"
                    android:textSize="20dp"/>
            </RelativeLayout>
            <!--addition block-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/pink"
                android:layout_below="@id/info_block2"
                >
                <TextView
                    android:id="@+id/exit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вийти з акаунту"
                    android:fontFamily="@font/lorabold"
                    android:textSize="18dp"
                    android:textColor="@color/crimson"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:onClick="signOut"
                    />
                <TextView
                    android:id="@+id/delete_button"
                    android:layout_below="@id/exit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Видалити акаунт"
                    android:fontFamily="@font/lorabold"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:onClick="deleteAccount"
                    />
            </RelativeLayout>

        </RelativeLayout>
</ScrollView>
<!--footer-->
    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>