<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProductActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentStart="true"
        android:id="@+id/header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageButton
                android:onClick="backToDiaryProductActivity"
                android:layout_marginTop="13dp"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/white_arrow"
                android:background="@color/black"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/product_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:text="Назва продукту"
                android:fontFamily="@font/loraregular"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Редагувати в щоденнику"
                android:textSize="18sp"
                android:fontFamily="@font/lorabold"
                android:textColor="@color/crimson"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title_weight"
                android:layout_below="@id/title"
                android:text="Вага, грам"
                android:textSize="18sp"
                android:fontFamily="@font/loraregular"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                />
            <LinearLayout
                android:id="@+id/weight_block"
                android:layout_below="@id/title_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:src="@drawable/plusminus"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    />
                <EditText
                    android:id="@+id/weight_editText"
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:text="100"
                    android:layout_marginTop="10dp"
                    android:layout_height="45dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/border_crimson"
                    android:padding="10dp"
                    android:maxLines="1"/>
            </LinearLayout>
            <Button
                android:id="@+id/button_save"
                android:layout_below="@id/weight_block"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Зберегти зміни"
                android:fontFamily="@font/loraregular"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/button_delete"
                android:layout_below="@id/button_save"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Видалити"
                android:textColor="@color/black"
                android:fontFamily="@font/loraregular"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/title2"
                android:layout_below="@id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Харчова цінність на 100 г"
                android:textSize="18sp"
                android:fontFamily="@font/lorabold"
                android:textColor="@color/crimson"
                />
            <LinearLayout
                android:id="@+id/line_first"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/title2"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                >
                <RelativeLayout
                    android:layout_marginEnd="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pink">
                    <TextView
                        android:id="@+id/calories_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Калорійність"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/calories"
                        android:layout_below="@id/calories_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginStart="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pink">
                    <TextView
                        android:id="@+id/fat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Жири"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/fat"
                        android:layout_below="@id/fat_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/line_second"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/line_first"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_marginEnd="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pink">
                    <TextView
                        android:id="@+id/carbs_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Вуглеводи"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/carbs"
                        android:layout_below="@id/carbs_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginStart="2dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/pink">
                    <TextView
                        android:id="@+id/protein_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Білки"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:id="@+id/protein"
                        android:layout_below="@id/protein_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/loraregular"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"
                        />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>