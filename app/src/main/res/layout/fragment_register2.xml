<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Register2Fragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- block1 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:id="@+id/block1"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/crimson"
                android:text="2 з 3"
                android:textSize="20dp"
                android:fontFamily="@font/loraregular"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <!--block2-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_below="@+id/block1"
            android:id="@+id/block2"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weight_text"
                android:textColor="@color/pink"
                android:text="Введіть свою вагу"
                android:textSize="23dp"
                android:fontFamily="@font/loraregular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/weight_editText"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:layout_below="@+id/weight_text"
                android:hint="кг"
                android:inputType="number"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="10dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/height_text"
                android:layout_below="@+id/weight_editText"
                android:textColor="@color/pink"
                android:text="Введіть свій ріст"
                android:textSize="23dp"
                android:fontFamily="@font/loraregular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:id="@+id/height_editText"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:layout_below="@+id/height_text"
                android:hint="см"
                android:inputType="number"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="10dp"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goal_text"
                android:layout_below="@+id/height_editText"
                android:textColor="@color/pink"
                android:text="Вкажіть мету"
                android:textSize="22sp"
                android:fontFamily="@font/loraregular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_bg"
                android:id="@+id/spinner"
                android:layout_below="@id/goal_text"
                android:textSize="20sp"
                android:fontFamily="@font/loraregular"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age_text"
                android:layout_below="@id/spinner"
                android:textColor="@color/pink"
                android:text="Введіть свій вік"
                android:textSize="23sp"
                android:fontFamily="@font/loraregular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:id="@+id/age_editText"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:layout_below="@+id/age_text"
                android:hint="років"
                android:inputType="number"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="10dp"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/gender_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/age_editText"
                android:textColor="@color/pink"
                android:text="Вкажіть свою стать"
                android:textSize="23dp"
                android:fontFamily="@font/loraregular"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/rounded_edittext_bg"
                android:id="@+id/spinner_gender"
                android:layout_below="@id/gender_text"
                android:textSize="20dp"
                android:fontFamily="@font/loraregular"
                android:layout_marginBottom="35dp"
                />
        </RelativeLayout>
        <!--block3-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/block2"
            android:id="@+id/block3"
            >
            <Button android:id="@+id/button_forward"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="78dp"
                android:layout_marginStart="78dp"
                android:text="Далі"
                android:fontFamily="@font/loraregular"
                android:textSize="23dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button_bg"
                android:layout_alignParentStart="true"
                />
            <Button android:id="@+id/button_back"
                android:layout_below="@id/button_forward"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="78dp"
                android:layout_marginStart="78dp"
                android:layout_marginBottom="30dp"
                android:text="Назад"
                android:fontFamily="@font/loraregular"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_button_bg"
                android:layout_alignParentStart="true"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>